-- import: shaheen-senpai.github.io/fira-code/assets as fira-code-assets
-- import: shaheen-senpai.github.io/inter-font/assets as inter-font-assets






;; box shadow specification
-- ftd.shadow s-box:
color: #020c1bb3
x-offset.px: 0
y-offset.px: 20
blur.px: 30
spread.px: -15








;;-------------------------------------------------work section----------------------------------------------------------
-- component work:
children c: 

-- ftd.column:
width: fill-container
min-height.fixed.vh: 100
max-height: hug-content
padding-horizontal.px if { ftd.device == "desktop" }: 100
padding-vertical.vh: 10
align-content: center
id: work


-- ftd.column:
width: fill-container
height: hug-content
css: $assets.files.styles.style.css

;; title and number---------------------------------------
-- ftd.row:
width: fill-container
spacing.fixed.px: 5
align-content: left
margin-bottom.px: 40
margin-top.px: 10

-- ftd.text: 03\.
role: $fira-code-size-20-400
color: #64ffda

-- ftd.text: Some Things Iâ€™ve Built
role: $inter-font-size-26-600
color: #ccd6f6

-- ftd.desktop:    

-- ftd.row:
margin-left.percent: 2
width.fixed.calc: 100% - 350px
height.fixed.px: 1
background.solid: #233554

-- end: ftd.row
-- end: ftd.desktop

-- ftd.mobile:
-- ftd.row:
margin-left.percent: 2
width.fixed.calc: 100% - 255px
height.fixed.px: 1
background.solid: #233554

-- end: ftd.row
-- end: ftd.mobile

-- end: ftd.row
;; end: title and number----------------------------------

-- ftd.column:
width: auto
height: auto
spacing.fixed.vh if { ftd.device == "desktop" }: 5
children: $work.c   


-- end: ftd.column

-- end: ftd.column

-- end: ftd.column

-- end: work









